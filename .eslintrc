{
  "globals": {
    "angular": true,
    "d3": true
  },

  "env": {
    "browser": true,
    "node": false,
    "amd": false
  },
  "rules": {

    "no-comma-dangle": 1,
    "no-cond-assign": 1,
    "no-console" :1,
    "no-constant-condition" : 1,
    "no-control-regex" : 1,
    "no-debugger" : 1,
    "no-dupe-keys" : 1,
    "no-empty": 1,
    "no-empty-class": 1,
    "no-ex-assign" : 1,
    "no-extra-boolean-cast" : 1,
    "no-extra-parens" : 0,
    "no-extra-semi" : 1,
    "no-func-assign" : 1,
    "no-inner-declarations" : 1,
    "no-invalid-regexp" : 1,
    "no-irregular-whitespace" : 1,
    "no-negated-in-lhs" : 1,
    "no-obj-calls" : 1,
    "no-regex-spaces" : 0,
    "no-reserved-keys" : 1,
    "no-sparse-arrays" : 1,
    "no-unreachable" : 1,
    "use-isnan" : 1,
    "valid-jsdoc" : 0,
    "valid-typeof" : 1,

    /* Best practices  */
    "block-scoped-var" : 1,
    "complexity": [1,11],
    "consistent-return" : 1,
    "curly" : 1,
    "default-case" : 1,
    "dot-notation" : 1,
    "no-process-env" : 1,
    "no-proto" : 1,
    "no-redeclare" : 1,
    "no-return-assign" : 1,
    "no-script-url" : 1,
    "no-self-compare" : 1,
    "no-sequences" : 1,
    "no-throw-literal" : 1,
    "no-unused-expressions" : 1,
    "no-void" : 0,
    "no-warning-comments" : 1,
    "no-with" : 1,
    "radix" : 1,
    "vars-on-top" : 1,
    "wrap-iife" : [1,"inside"],
    "yoda" : 1,

    /* strict mode */

    "strict" : [0, "global"],


    /* variables */

    "no-catch-shadow" : 1,
    "no-delete-var" : 1,
    "no-label-var" : 1,
    "no-shadow" : 1,
    "no-shadow-restricted-names" : 1,
    "no-undef" : 1,
    "no-undef-init" : 1,
    "no-undefined" : 1,
    "no-unused-vars" : 1,
    "no-use-before-define" : 0,

    /* stylistic issues */

    "indent" : 1,
    "brace-style" : [1,"stroustrup", { "allowSingleLine": true }],
    "camelcase" : 1,
    "comma-spacing" : [1, {"before": false, "after": true}],
    "comma-style" :  [1, "last"],
    "consistent-this" : [0, "vm,that"],
    "eol-last" : 1,
    "func-names" : 0,
    "func-style" : 1,
    "key-spacing" : [1,{"beforeColon": false,"afterColon": true}],
    "max-nested-callbacks" : [1,3],
    "new-cap" : 0,
    "new-parens" : 0,
    "no-array-constructor" : 1,
    "no-inline-comments" : 1,
    "no-lonely-if" : 1,
    "no-mixed-spaces-and-tabs" : 1,
    "no-multiple-empty-lines" : 1,
    "no-multi-spaces" : 1,
    "no-nested-ternary" :1,
    "no-new-object" : 1,
    "no-space-before-semi" : 1,
    "no-spaced-func" : 0,
    "no-ternary" : 1,
    "no-trailing-spaces" : 1,
    "no-underscore-dangle" :1,
    "no-wrap-func":1,
    "one-var" : 1,
    "operator-assignment" : 0,
    "padded-blocks" : 0,
    "quote-props" : [1,"as-needed"],
    "quotes": [1, "single"],
    "semi" : 1,
    "sort-vars": 0,
    "space-after-function-name" : 1,
    "space-after-keywords" : 1,
    "space-before-blocks" : 0,
    "space-before-function-parentheses" : [1,"never"],
    "space-in-brackets" : 0,
    "space-in-parens" : [1,"never"],
    "space-infix-ops" : 1,
    "space-return-throw-case" : 1,
    "space-unary-ops" : 1,
    "spaced-line-comment" : 0,
    "wrap-regex" : 0,



    /* legacy */

    "max-depth": [1, 4],
    "max-len": [1, 120, 4],
    "max-params": [1, 4],
    "max-statements": [0, 10],
    "no-bitwise" : 0,
    "no-plusplus" : 0
  }
}